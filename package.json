{
  "name": "@mindary/emittery",
  "version": "0.10.0",
  "description": "Simple and modern async event emitter",
  "license": "MIT",
  "repository": "mindary/emittery",
  "funding": "https://github.com/mindary/emittery",
  "authors": [
    {
      "name": "TY",
      "email": "torworx@gmail.com"
    },
    {
      "name": "Sindre Sorhus",
      "email": "sindresorhus@gmail.com",
      "url": "https://sindresorhus.com"
    }
  ],
  "engines": {
    "node": ">=12"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prerelease": "cross-env CI=1 npm run test",
    "release": "np --no-2fa",
    "build": "lb-tsc -b",
    "build:full": "npm ci --ignore-scripts && npm run clean && npm run build",
    "coverage": "lb-nyc report --reporter=text-summary",
    "precoverage": "npm test",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "lb-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "npm run prettier:cli -- --check",
    "prettier:fix": "npm run prettier:cli -- --write",
    "format": "npm run prettier:fix",
    "clean": "lb-clean dist coverage .nyc_output *.tsbuildinfo",
    "pretest": "npm run clean && npm run format",
    "test": "npm run ava",
    "posttest": "npm run lint",
    "preava": "npm run build",
    "ava": "nyc ava \"dist/__tests__/**/*.test.js\""
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "keywords": [
    "event",
    "emitter",
    "eventemitter",
    "events",
    "async",
    "emit",
    "on",
    "once",
    "off",
    "listener",
    "subscribe",
    "unsubscribe",
    "pubsub",
    "tiny",
    "addlistener",
    "addeventlistener",
    "dispatch",
    "dispatcher",
    "observer",
    "trigger",
    "await",
    "promise",
    "typescript",
    "ts",
    "typed"
  ],
  "devDependencies": {
    "@loopback/build": "^7.0.0",
    "@loopback/eslint-config": "^11.0.0",
    "@loopback/testlab": "^3.4.2",
    "@types/node": "^16.4.2",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "ava": "^3.15.0",
    "cross-env": "^7.0.3",
    "delay": "^5.0.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-plugin": "^3.4.0",
    "eslint-plugin-ava": "^12.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "np": "^7.5.0",
    "p-event": "^4.2.0",
    "prettier": "^2.3.2",
    "tsd": "^0.17.0",
    "typescript": "^4.3.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
